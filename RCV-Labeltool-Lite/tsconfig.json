{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@common": ["src/app/features/common"],
      "@core": ["src/app/core"],
      "@core/*": ["src/app/core/*"],
      "@domain/*": ["src/app/domain/*"],
      "@environment": ["src/environments/environment"],
      "@segment-editor": ["src/app/core/modules/segment-editor"],
      "@svg-editor": ["src/app/core/modules/svg-editor"],
      "@rcv/domain": ["projects/rcv/domain/src/lib"],
      "@rcv/common": ["projects/rcv/common/src"],
      "@rcv/configuration": ["projects/rcv/configuration/src"],
      "@rcv/ui": ["projects/rcv/ui/src"]
    },
    "outDir": "/dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
